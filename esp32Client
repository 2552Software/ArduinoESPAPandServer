      Serial.println("No connections made. Be the access point");
      WiFi.softAP(WIFI2);
      Serial.print("AP IP address: ");
      Serial.println(WiFi.softAPIP());
    }
    else {
      Serial.print("Connected IP address: ");
    }
  }
}

